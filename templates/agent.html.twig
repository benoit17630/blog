<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <title>{{ agent.lastName }}</title>
</head>
<body>
<main class="container">

    <h1 class="text-center">{{ agent.firstName }} {{ agent.lastName }}</h1>

    <div class="row align-items-center justify-content-around">
        {% if agent.id != agent.id|length %}

                <div class="previous "><a class="btn btn-primary"  href="{{ path('agent_show', {id:agent.id-1}) }}"  title="Précédent">Précédent</a></div>

        {% endif %}

        <p class="text-center">cette agent a : {{ agent.age }}</p>

        <div class="text-center col-4 mt-4"><img src="{{ asset('assets/img/emilie.jpg') }}"  alt="photo d emilie" class="img-fluid "></div>
        {% if agent.id != agent|length %}

        <div class="next"><a class="btn btn-primary" href="{{ path('agent_show', {id:agent.id+1}) }}" title="Suivant">Suivant</a></div>
        {% endif %}
    </div>

    <div class="text-center">

        <a class="btn btn-primary  mt-4 col-2 " href="{{ path('home') }}">page d index</a>

        <a class="btn btn-primary  mt-4 col-2 " href="{{ path('agents') }}">page des agents</a>

    </div>

</main>
</body>
</html>